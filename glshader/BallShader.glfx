////psBallTrail

in vec3 tex0_alpha;

void main()
{
   vec3 ballImageColor;
   if (!hdrTexture0)
      ballImageColor = InvGamma(texture(Texture0, tex0_alpha.xy).rgb);
   else
      ballImageColor = texture(Texture0, tex0_alpha.xy).bgr;
   color = vec4((cBase_Alpha.xyz*(0.075*0.25) + ballImageColor)*fenvEmissionScale_TexWidth.x, tex0_alpha.z); //!! just add the ballcolor in, this is a whacky trail anyhow
}

